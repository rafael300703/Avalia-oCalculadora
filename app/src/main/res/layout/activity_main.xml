<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">



    <TextView
        android:id="@+id/vizualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5x4+3x5"
        android:textColor="@color/white"
        android:textSize="90sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botaoApagar"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30px">

    </TextView>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaoApagar"
        android:layout_width="262px"
        android:layout_height="234px"
        android:textColor="@color/white"
        android:drawableStart="@drawable/apagar"
        android:background="@drawable/botao2"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botaodivi"
        app:layout_constraintBottom_toTopOf="@+id/botaosub"
        android:paddingStart="70px"
        android:contentDescription="Botao de apagar"
        android:clickable="true">

    </androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaosub"
        android:layout_width="262px"
        android:layout_height="422px"
        android:text="-"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:background="@drawable/botao2"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botao9"
        app:layout_constraintBottom_toTopOf="@+id/botaoadicao">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaoadicao"
        android:layout_width="262px"
        android:layout_height="423px"
        android:text="+"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:background="@drawable/botao2"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botao3"
        app:layout_constraintBottom_toTopOf="@+id/botaovirgula">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaoresultado"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="="
        android:textSize="40dp"
        android:textColor="@color/black"
        android:background="@drawable/botao3"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botaovirgula"
        app:layout_constraintBottom_toBottomOf="parent">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaodivi"
        android:layout_width="397px"
        android:layout_height="230px"
        android:text="รท"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:background="@drawable/botao2"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botaomult"
        app:layout_constraintBottom_toTopOf="@+id/botao7">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaomult"
        android:layout_width="398px"
        android:layout_height="230px"
        android:text="X"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/botao2"
        android:layout_margin="8px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botao7">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao9"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="9"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botao8"
        app:layout_constraintBottom_toTopOf="@+id/botao6">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao8"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="@string/_8"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botao7"
        app:layout_constraintBottom_toTopOf="@+id/botao5"        >

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao7"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="7"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botao4">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao6"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="@string/_6"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botao5"
        app:layout_constraintBottom_toTopOf="@+id/botao3">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao5"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="@string/_5"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botao4"
        app:layout_constraintBottom_toTopOf="@+id/botao2">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao4"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="4"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/botao1">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao3"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="3"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botao2"
        app:layout_constraintBottom_toTopOf="@+id/botaovirgula">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao2"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="2"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botao1"
        app:layout_constraintBottom_toTopOf="@+id/botao0">

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botaovirgula"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text=","
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintStart_toEndOf="@+id/botao0"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao1"
        android:layout_width="262px"
        android:layout_height="280px"
        android:text="1"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/botao"
        android:layout_margin="8px"
        app:layout_constraintBottom_toTopOf="@+id/botao0"
        app:layout_constraintStart_toStartOf="parent">


    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/botao0"
        android:layout_width="531px"
        android:layout_height="280px"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:background="@drawable/botao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8px">

    </androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>